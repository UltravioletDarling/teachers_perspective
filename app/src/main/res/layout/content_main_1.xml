<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:foregroundGravity="center_vertical|center_horizontal"
    app:layout_anchorGravity="center_horizontal">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tooltst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="#0277BD"
        android:backgroundTint="#0277BD"
        android:src="@android:drawable/ic_menu_add"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="401dp"
        android:layout_marginTop="90dp"
        android:layout_height="603dp"
        tools:srcCompat="@drawable/ic_test_icon" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartst"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorAccent"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/lato_blackitalic"
        android:gravity="center_horizontal|center_vertical"
        android:text="Quiz Manager"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="363dp"
        android:layout_height="66dp"
        android:layout_marginTop="650dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:text="Create  a new quiz ->"
        android:textSize="30sp"
        app:layout_anchor="@+id/textView7"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
